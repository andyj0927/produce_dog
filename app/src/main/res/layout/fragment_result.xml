<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCF7F5"
    tools:context="fragment.ResultFragment">

    <!--추후 수정해서 닉네임 전달 받게 해야함-->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/bazzi"
        android:gravity="center_horizontal"
        android:text="당신과 어울리는 강아지는"
        android:textColor="@color/CustomGray"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_main"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/bazzi"
        android:gravity="center_horizontal"
        android:text="@string/result_1_detail"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_main"
        android:layout_width="269dp"
        android:layout_height="201dp"
        android:src="@drawable/nonosign"
        app:layout_constraintBottom_toTopOf="@+id/tv_sub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main"
        app:layout_constraintVertical_bias="0.44" />

    <TextView
        android:id="@+id/tv_sub"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="@string/result_1_detail"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_main"
        app:layout_constraintVertical_bias="0.63"
        android:fontFamily="@font/bazzi" />

    <ImageView
        android:id="@+id/btn_ot"
        android:layout_width="76dp"
        android:layout_height="158dp"
        android:layout_margin="10dp"
        android:layout_marginStart="100dp"
        android:src="@drawable/cutedog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub"
        app:layout_constraintVertical_bias="0.306" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bazzi"
        android:text="다른유형 보러가기"
        android:textSize="32dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toEndOf="@+id/btn_ot"
        app:layout_constraintTop_toBottomOf="@+id/tv_sub"
        app:layout_constraintVertical_bias="0.354" />


</androidx.constraintlayout.widget.ConstraintLayout>
